
<% layout('templates/layout')%>

<script type="text/javascript" src="/angular_app/angular_app.js"></script>
<div ng-app="myApp" ng-controller="APPController1">
    <div class="row-fluid " >
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon white lock"></i><span class="break"></span>add  new reservation </h2>
            <div class="box-icon">

            </div>
        </div>
        <div class="box-content">
            <form class="form-horizontal"  >
                <fieldset>

                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">first name</label>
                        <div class="controls">
                            <input type="text" ng-model="m.first_name" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>

                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">last name</label>
                        <div class="controls">
                            <input type="text" ng-model="m.last_name" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">email</label>
                        <div class="controls">
                            <input type="email" ng-model="m.email" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">address</label>
                        <div class="controls">
                            <input type="text" ng-model="m.address" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>

                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">city</label>
                        <div class="controls">
                            <input type="text" ng-model="m.city" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">country</label>
                        <div class="controls">
                            <input type="text" ng-model="m.country" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">check in date</label>
                        <div class="controls">
                            <input type="date" ng-model="m.checkin_date" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>
                    <div class="control-group success">
                        <label class="control-label" for="inputSuccess">check out</label>
                        <div class="controls">
                            <input type="date" ng-model="m.checkout_date" id="inputSuccess">
                            <span class="help-inline"></span>
                        </div>
                    </div>




                    <div class="form-actions">
                        <button type="button" class="btn btn-primary" ng-click="add(m)">Submit</button>
                        <button class="btn">Reset</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>




</div>
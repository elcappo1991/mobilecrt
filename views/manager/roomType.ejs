
<% layout('../templates/layoutManager')%>


<script type="text/javascript" src="/javascripts/iso-3166-country-codes-angular.js"></script>
<script type="text/javascript" src="/angular_app/angular_manager_app.js"></script>
<div ng-app="app" ng-controller="TypePage">




    <div class="row" ng-cloak>

        <div class="col-md-12">
            <!-- Basic Wizard Block -->
            <div class="block">
                <!-- Basic Wizard Title -->
                <div class="block-title">
                    <h2><strong>Add Type</strong> Wizard</h2>
                </div>
                <!-- END Basic Wizard Title -->

                <!-- Basic Wizard Content -->
                <form id="basic-wizard"   enctype="multipart/form-data" action="/manager/upload" method="post" class="form-horizontal form-bordered ui-formwizard">
                    <!-- First Step -->
                    <div id="first" class="step ui-formwizard-content" style="display: block;">
                        <!-- Step Info -->
                        <div class="wizard-steps">
                            <div class="row">
                                <div class="col-xs-4 active">
                                    <span>1. Type</span>
                                </div>
                                <div class="col-xs-4">
                                    <span>2. Image</span>
                                </div>

                            </div>
                        </div>
                        <!-- END Step Info -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="example-username">Type Name</label>
                            <div class="col-md-6">
                                <input id="type" name="type" class="form-control ui-wizard-content"  type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="example-username">Description</label>
                            <div class="col-md-6">
                                <input id="description" name="description" class="form-control ui-wizard-content"  type="text">
                            </div>
                        </div>

                    </div>
                    <!-- END First Step -->



                    <!-- Third Step -->
                    <div id="third" class="step ui-formwizard-content" style="display: none;">
                        <!-- Step Info -->
                        <div class="wizard-steps">
                            <div class="row">
                                <div class="col-xs-4 done">
                                    <span><i class="fa fa-check"></i></span>
                                </div>
                                <div class="col-xs-4 done">
                                    <span><i class="fa fa-check active"></i></span>
                                </div>

                            </div>
                        </div>
                        <!-- END Step Info -->
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="example-bio">Image </label>
                            <div class="col-md-8">
                                <input id="image" name="image" type="file">
                            </div>
                        </div>


                    </div>
                    <!-- END Third Step -->

                    <!-- Form Buttons -->
                    <div class="form-group form-actions">
                        <div class="col-md-8 col-md-offset-4">
                            <input class="btn btn-sm btn-warning ui-wizard-content ui-formwizard-button" id="back" value="Back" disabled="disabled" type="reset">
                            <input class="btn btn-sm btn-primary ui-wizard-content ui-formwizard-button" id="next" value="Next" type="submit">
                        </div>
                    </div>
                    <!-- END Form Buttons -->
                </form>
                <!-- END Basic Wizard Content -->
            </div>
            <!-- END Basic Wizard Block -->
        </div>





        <div class="col-sm-6 col-md-3" ng-repeat="option in roomType">
            <!-- Advanced Animated Image Widget -->
            <div class="widget">
                <div class="widget-advanced">
                    <!-- Widget Header -->
                    <div class="widget-header text-center">
                        <!-- For best results use an image with at least 150 pixels in height (with the width relative to how big your widget will be!) - Here I'm using a 1000x150 pixels image -->
                        <img ng-src="{{option.picture_url}}" alt="background" class="widget-background animation-pulseSlow">
                        <h3 class="widget-content widget-content-image widget-content-light">
                            <a href="page_ready_user_profile.html">{{option.type}}</a><br>
                            <small>{{option.description}}</small>
                        </h3>
                    </div>
                    <!-- END Widget Header -->

                    <!-- Widget Main -->

                    <!-- END Widget Main -->
                </div>
            </div>
            <!-- END Advanced Animated Image Widget -->
        </div>



    </div>

</div>



<script src="/js/pages/formsWizard.js"></script>
<script>
    $(function(){ FormsWizard.init(); });
</script>
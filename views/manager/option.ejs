
<% layout('../templates/layoutManager')%>


<script type="text/javascript" src="/angular_app/angular_manager_app.js"></script>
<div ng-app="Myapp" ng-controller="option">

   <div class="row" ng-cloak>



       <div class="content-float">


           <div class="block">
               <!-- Info Title -->
               <div class="block-title">
                   <div class="block-options pull-right">

                   </div>
                   <h2> <strong>  Add option  </strong></h2>
               </div>
               <!-- END Info Title -->

               <!-- Info Content -->
               <form action="/manager/addOption" method="post" class="form-horizontal form-bordered"   id="add">



                   <div class="form-group">
                       <div class="col-md-12">
                           <div class="input-group">
                               <input type="text" id="description" name="description" class="form-control " placeholder="Description " required>
                               <span class="input-group-addon"><i class=" fa fa-database "></i></span>
                           </div>
                       </div>
                   </div>




                   <div class="form-group form-actions">
                       <div class="col-xs-12">
                         <button type="submit" class="btn btn-sm btn-default">Submit</button>
                       </div>
                   </div>
               </form>
               <!-- END Info Content -->
           </div>


       </div>


   </div>

    <div class="col-sm-3 col-lg-4" ng-repeat="option in options">
        <!-- Widget -->
        <div class="widget">
            <div class="widget-simple">
                <a href="javascript:void(0)" class="widget-icon pull-right themed-background">
                    <i class="gi gi-delete"></i>
                </a>

                <h3 class="text-left animation-stretchLeft">   <strong>{{option.description}}</strong></h3>
            </div>
        </div>
        <!-- END Widget -->
    </div>




</div>


<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.6.2/chosen.jquery.js"></script>
<script type="text/javascript">

    $("#multiselect").chosen({no_results_text: "Oops, nothing found!",placeholder_text_multiple:"please enter room options" });
</script>
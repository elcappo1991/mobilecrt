    function initMap(latitude,longitude) {


            if(latitude != undefined){
           var uluru = {lat:latitude, lng:longitude};
           console.log('*********************')
           console.log(uluru)
           var map = new google.maps.Map(document.getElementById('map'), {
               zoom: 4,
               center: uluru
           });
           var marker = new google.maps.Marker({
               position: uluru,

               map: map
           });

            }


    }

</script>


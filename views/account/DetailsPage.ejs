
<% layout('../templates/layoutAccount')%>



<script type="text/javascript" src="/angular_app/angular_account_app.js"></script>
<div ng-app="myApp" ng-controller="details"  ng-cloak>
<div class="row">

    <div class="col-md-12">
        <!-- Simple Team Widget -->
        <div class="widget">
            <div class="widget-simple text-center">

                <h4 class="widget-content">
                    <a href="" class="themed-color-flatie"  ng-repeat="hotel in hotels" ng-if="hotel.id== reservation.hotel_id">
                        <strong style="font-size: xx-large">{{hotel.name}}</strong>
                    </a>
                    <small>{{reservation.type_room}}</small>
                </h4>
            </div>
            <div class="widget-extra themed-background-dark-default">
                <div class="row text-center">
                    <div class="col-xs-4">
                        <h3 class="widget-content-light">
                            <a href="javascript:void(0)" class="themed-color-flatie"><strong>{{reservation.companion_nb}}</strong></a><br>
                            <small>Companion</small>
                        </h3>
                    </div>
                    <div class="col-xs-4">
                        <h3 class="widget-content-light">
                            <a href="javascript:void(0)" class="themed-color-flatie"><strong>{{reservation.room_nb}}</strong></a><br>
                            <small>Room Booked</small>
                        </h3>
                    </div>
                    <div class="col-xs-4">
                        <h3 class="widget-content-light">
                            <a href="javascript:void(0)" class="themed-color-flatie"><strong>{{reservation.ref}}</strong></a><br>
                            <small>Reference</small>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <!-- END Simple Team Widget -->
    </div>



<div class="col-md-5" >
    <div class="widget">
        <div class="widget-advanced widget-advanced-alt">
            <!-- Widget Header -->
            <div class="widget-header text-left">
                <!-- For best results use an image with at least 150 pixels in height (with the width relative to how big your widget will be!) - Here I'm using a 1200x150 pixels image -->
                <img src="{{picture}}" alt="background" class="widget-background animation-pulseSlow col-md-12">
                <h3 class="widget-content widget-content-image widget-content-light clearfix">

                    <a href="javascript:void(0)" class="themed-color-default">{{reservation.type_room}} <strong>Picture</strong></a><br>
                    <small></small>
                </h3>
            </div>
            <!-- END Widget Header -->

        </div>
    </div>


</div>


    <div class="col-md-7">
        <!-- Advanced Active Theme Color Widget Alternative -->
        <div class="widget">
            <div class="widget-advanced widget-advanced-alt">
                <!-- Widget Header -->
                <div class="widget-header text-center themed-background-dark">

                    <div class="widget-icon pull themed-background-fire animation-fadeIn">
                        <i class="gi gi-clock"></i>
                    </div>
                    <h4 class="widget-content-light">
                        <a href="page_ready_user_profile.html">{{reservation.start_date | date :"fullDate"}}</a><br>
                        <small><i class="gi gi-pin"></i> Start At</small>
                    </h4>
                </div>
                <!-- END Widget Header -->


            </div>
        </div>
        <!-- END Advanced Active Theme Color Widget Alternative -->
    </div>

    <h2 style="margin-left: 20px">Companion <strong>List</strong> </h2><br>
<div class="col-md-4 col-lg-12" ng-repeat="companion in companionList">

    <div class="widget" >
        <div class="widget-simple themed-background-dark">
            <div class="widget-icon pull-right themed-background-fire animation-fadeIn">
                <i class="gi gi-user"></i>
            </div>
            <h4 class="widget-content widget-content-light">
                <a href="#" class="themed-color-amethyst">
                    <strong>{{companion.first_name}} {{companion.last_name}}</strong>
                </a>
                <small>{{companion.email}}</small>
            </h4>
        </div>
    </div>



</div>








    </div>









</div>
